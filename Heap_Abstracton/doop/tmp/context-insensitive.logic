OptVirtualMethodInvocationBase(?invocation, ?base) ->
  VarRef(?base), MethodInvocationRef(?invocation).
OptVirtualMethodInvocationBase(?invocation, ?base) <-
  Reachable(?inmethod),
  VirtualMethodInvocation:In(?invocation, ?inmethod),
  VirtualMethodInvocation:Base[?invocation] = ?base.
